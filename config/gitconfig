[user]
  name = haoxin
  email = haoxinst@gmail.com
[core]
  editor = /usr/bin/vim
  ignorecase = false
[pull]
  ff = only
[push]
  default = simple
[merge]
  tool = vscode
[mergetool]
  keepBackup = false
[mergetool "vscode"]
  cmd = "code --wait "
[diff]
  tool = vscode
[difftool "vscode"]
  cmd = "code --wait --diff  "
[filter "lfs"]
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
  required = true
[alias]
  ps = push
  br = branch
  cm = commit
  co = checkout
  rb = rebase -i
  aa = add --all
  st = status -sb
  cp = cherry-pick
  pl = pull --ff-only
  lg = log --all --graph --abbrev-commit --date=relative --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
  authors = ! git log --format='%aN' | sort -u
  contributions = shortlog -e -s -n
